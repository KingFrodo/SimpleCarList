    android:orientation="vertical" android:padding="10dp">

    <EditText
        android:id="@+id/fn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/nn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/ma"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/mo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>